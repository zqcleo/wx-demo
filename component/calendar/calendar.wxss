.calendar-box{
  color: white;
  display: flex;
  flex-direction: column;
  align-items: center;
  flex-grow: 1;
}
.top-handle {
  font-size:28rpx;
  height: 80rpx;
  display:flex;
  flex-direction:row;
  align-items:center;
  justify-content:center;
  
  transition: height 0.5s;
  overflow: hidden;
}
.show-top-handle-animation{
  height: 80rpx;
}
.hide-top-handle-animation{
  height: 0rpx;
}
.prev-arrow {
  height: 50rpx;
  width: 50rpx;
}
.next-arrow {
  height: 50rpx;
  width: 50rpx;
}
.date-area {
  width: 375rpx;
  height: 80rpx;
  text-align: center;
  display:flex;
  flex-direction:row;
  justify-content:center;
  align-items:center;
}
.weeks-box {
  height: 50rpx;
  line-height: 50rpx;
  opacity: 0.5;
  display:flex;
  flex-direction:row;
  align-items:center;
}
.week {
  width: 104rpx;
  height: 104rpx; 
  font-size:28rpx;
  text-align: center;
  line-height: 104rpx;
}
.days-box{
  width: 100%;  
  display:flex;
  flex-direction:row;
  flex-wrap:wrap;
  transition: height 0.5s;

  height: 500rpx;
  overflow: hidden;
}
.monthmode-animation{
  height: 500rpx;
}
.weekmode-animation{
  height: 100rpx;
}
.day-box{
  position:relative;
  left:2%;
  width: 104rpx;
  height: 104rpx;
}
.disabled-day{
  color:#cacaca;
  align-items:center;
  justify-content:center;
  display:flex;
}
.normal-day {
  display:flex;  
  align-items:center;
  justify-content:center;
  color: white;
}












.box {
  display: flex;
}

.box-lr {
  flex-direction: row;
}

.box-rl {
  flex-direction: row-reverse;
}

.box-tb {
  flex-direction: column;
}

.box-pack-center {
  justify-content: center;
}

.box-align-center {
  align-items: center;
}

.box-wrap {
  flex-wrap: wrap;
}

.flex {
